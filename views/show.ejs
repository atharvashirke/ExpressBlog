<%- include('partials/header') %> 

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <p><%= blog.created.toDateString() %> </p>
    <img src="<%= blog.image %>">
    <p><%- blog.body %></p>
    <a href="/blogs/<%= blog._id %>/edit"><button class="ui inverted orange button">Edit</button></a>
    <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="delete">
        <button class="ui inverted red button">Delete</button>
    </form>
</div>

