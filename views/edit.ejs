<%- include('partials/header') %> 

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= post.title %></div>
    <form action="/blogs/<%= post.id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= post.title %>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= post.image %>" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%= post.body %></textarea>
        </div>
        <button class="ui inverted green button" type="submit">Submit</button>
    </form>
</div>

<%- include('partials/footer') %> 